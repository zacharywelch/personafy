<section class="pad2y clearfix">
  <div class="col-xs-6 pad4x">
    <div class="center contain clearfix keyline-all">
      <div class="row6 fill-blue pin-top"></div>
      <div class="contain space-bottom1 row7">
        <img src="{{model.photoUrl}}" alt="{{model.name}}" class="pin-bottom img-circle" width="80">
      </div>
      <h3>{{model.name}}</h3>
      <h5 class="quiet">{{model.description}}</h5>
    </div>
  </div>

  <div class="col-xs-6">
    <form>
      <fieldset>
        <label for="photo-url">Photo URL</label>
        {{input value=model.photoUrl id='photo-url'}}
      </fieldset>
      <fieldset>
        <label for="name">Name</label>
        {{input value=model.name placeholder='Name' id='name'}}
      </fieldset>
      <fieldset>
        <label for="description">Description</label>
        {{textarea value=model.description placeholder='Description' id='description'}}
      </fieldset>
      <button {{action "save"}} class="btn btn-primary">Save</button>
      <button {{action "cancel"}} class="btn btn-default">Cancel</button>
    </form>
  </div>
</section>

